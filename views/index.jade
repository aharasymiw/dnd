            label(for='strengthSave') Strength
            br
            br
            input(id='dexteritySaveProficiency' type='checkbox' name='dexteritySaveProficiency')
            input(id='dexteritySave' type='number' name='dexteritySave')
            label(for='dexteritySave') Dexterity
            br
            br
            input(id='constitutionSaveProficiency' type='checkbox' name='constitutionSaveProficiency')
            input(id='constitutionSave' type='number' name='constitutionSave')
            label(for='constitutionSave') Constitution
