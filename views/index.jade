          input(id='intelligenceMod' type='number' name='intelligenceMod')
          label(for='intelligenceMod') Mod
          br
          br
          input(id='wisdom' type='number' name='wisdom')
          label(for='wisdom') Wisdom
          input(id='wisdomMod' type='number' name='wisdomMod')
          label(for='wisdomMod') Mod
          br
          br
          input(id='charisma' type='number' name='charisma')
          label(for='charisma') Charisma
          input(id='charismaMod' type='number' name='charismaMod')
          label(for='charismaMod') Mod

        div(class='leftright')

          input(id='inspiration' type='checkbox' name='inspiration')
