block content

  form(id='character')
  
    div(class='top')

      input(id='characterName' type='text' name='characterName')
      br
      label(for='characterName') Character Name

      input(id='class' type='text' name='class')
      br
      label(for='class') Class

      input(id='level' type='text' name='level')
      br
      label(for='level') Level

      input(id='background' type='text' name='background')
      br
      label(for='background') Background

      input(id='playerName' type='text' name='playerName')
      br
      label(for='playerName') Player Name

      input(id='race' type='text' name='race')
      br
      label(for='race') Race

      input(id='alignment' type='text' name='alignment')
